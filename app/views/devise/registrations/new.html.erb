<div class="center-block" style="width:400px; margin-top:100px;">

<h2 class="text-center">Sign Up</h2>
  <div class="panel panel-default panel-body">


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-p" %>
      </div>
      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username , class: "form-control form-p" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-p"  %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control form-p" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Create Account" , class: "btn btn-purple btn-block"%>
      </div>
    <% end %>

  </div>
      <div class="panel panel-body panel-default">
        <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-pink center-block" %>

      </div>

</div>
